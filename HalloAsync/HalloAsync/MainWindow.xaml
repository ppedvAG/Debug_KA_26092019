<Window x:Class="HalloAsync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HalloAsync"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <StackPanel Margin="12">
        <Button IsEnabled="False" Click="StartOhneThread">Ohne Threading</Button>
        <Button Click="StartTask">Start Task</Button>
        <Button Click="StartTaskMitScheduler">Start Task mit TS</Button>
        <Button Click="StartAsyncAwait">Async/Await</Button>
        <Button Click="AlteFunktion">AlteFunktion Async/Await</Button>
        <Separator/>
        <ProgressBar Height="22" Name="pb"/>
    </StackPanel>
</Window>
